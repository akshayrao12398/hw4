<h1><%= @place.name %></h1>

<div class="row">
  <% @entries.each do |entry| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <% if entry.image.attached? %>
          <%= image_tag entry.image, class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= entry.title %></h5>
          <p class="card-text"><%= truncate(entry.description, length: 100) %></p>
          <p class="card-text"><small class="text-muted">
            Visited on: <%= entry.occurred_on %>
          </small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "New Entry", new_place_entry_path(@place), class: "btn btn-success mt-3" %>
<%= link_to "Back to Places", places_path, class: "btn btn-secondary mt-3" %>
